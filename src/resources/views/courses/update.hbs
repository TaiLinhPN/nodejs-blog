<form method="POST" action="/courses/{{course._id}}?_method=PUT" class="row  needs-validation" >
  <div class="col-md-12 position-relative">
    <label for="name" class="form-label">Name</label>
    <input type="text" value="{{course.name}}" class="form-control" id="name" name="name">
  </div>

  <div class="col-md-12 position-relative">
    <label for="description" class="form-label">description</label>
    <input type="text" value="{{course.description}}" class="form-control" id="description" name="description">
  </div>

  <div class="col-md-12 position-relative">
    <label for="youtubeId" class="form-label">youtubeId</label>
    <input type="text" value="{{course.youtubeId}}"class="form-control" id="youtubeId" name="youtubeId">
  </div>

  <div class="col-12">
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
</form>

