<div class="row g-3">

  <div class="col">
    <div class="card" style="width: 18rem;">
      <a href="/courses/{{course.slug}}">
        <img
          width="100px"
          src="{{course.image}}"
          class="card-img-top"
          alt="..."
        />
      </a>
      <div class="card-body">
        <a href="/courses/{{course.slug}}">
          <h5 class="card-title">{{course.name}}</h5>
        </a>
        <p class="card-text">{{course.description}}</p>
        <a href="/courses/{{course.slug}}" class="btn btn-primary">Go to {{course.name}}</a>
      </div></div>
  </div>

  <div class="col">
    <iframe
      width="1109"
      height="475"
      src="https://www.youtube.com/embed/{{course.youtubeId}}"
    ></iframe>
  </div>
</div>